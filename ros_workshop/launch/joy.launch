<launch>

  <!-- Joystick device -->
  <arg name="dev" default="/dev/input/js0" />

  <!-- Joy node -->
  <node respawn="true" pkg="joy" type="joy_node" name="basic_joy" ns="/bender/">
    <param name="dev" type="string" value="$(arg dev)" />
    <param name="deadzone" value="0.5" />
  </node>

</launch>
